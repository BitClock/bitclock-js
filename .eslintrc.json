{
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"ecmaFeatures": {
		"modules": true,
		"spread" : true,
		"restParams" : true
	},
	"env" : {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"rules" : {
		"semi": ["error", "always"],
		"no-unused-vars" : ["error"]
	},
	"parserOptions": {
		"sourceType": "module"
	}
}
