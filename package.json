{
  "name": "bitclock",
  "version": "0.9.0-beta.1",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitClock/bitclock-js.git"
  },
  "author": {
    "name": "Bernard McManus",
    "email": "bernard.mcmanus.iv@gmail.com",
    "url": "https://github.com/BitClock"
  },
  "homepage": "https://bitclock.io",
  "engines": {
    "node": ">=4"
  },
  "main": "dist/lib",
  "browser": "dist/bitclock.js",
  "scripts": {
    "build": "npm run build:babel && npm run build:package && npm run build:webpack",
    "build:babel": "babel lib --out-dir dist/lib --source-maps inline",
    "build:package": "node_modules/node-jq/bin/jq -rMc '{name: .name, version: .version}' package.json > dist/package.json",
    "build:webpack": "webpack --progress --hide-modules",
    "clean": "rimraf dist coverage .nyc_output",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:staged": "lint-staged",
    "mocha": "nyc mocha --require test/setup.js --compilers js:babel-register test/index.js",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "pretest": "npm run clean && npm run lint",
    "test": "cross-env NODE_ENV=test __SECRET_BITCLOCK_CONFIG_JSON='{\"fromJSON\":true}' npm run mocha"
  },
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "cookie": "^0.3.1",
    "isomorphic-fetch": "^2.2.1",
    "uuid": "^3.0.1",
    "wee-promise": "^1.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "bluebird": "^3.4.7",
    "chai": "^3.5.0",
    "cross-env": "^5.0.5",
    "eslint": "^3.5.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.2.0",
    "intercept-stdout": "^0.1.2",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.0.2",
    "lodash": "^4.17.4",
    "mocha": "^3.2.0",
    "nock": "^9.0.14",
    "node-jq": "^0.5.4",
    "nodemon": "^1.9.2",
    "nyc": "^11.0.3",
    "pre-commit": "^1.1.3",
    "rimraf": "^2.6.0",
    "sinon": "^2.3.6",
    "strip-ansi": "^3.0.1",
    "validator": "^7.0.0",
    "webpack": "^3.0.0"
  }
}
